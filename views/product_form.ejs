<%- include('header.ejs') %>
        <section>
            <h1><%- title %></h1>
            <form action="" method="post">
                <div class="form-group">
                    <label>
                        Product Name:
                        <input type="text" name="product_name" value="" required placeholder="Name of product">
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        Description:
                        <textarea name="description" cols="30" rows="10" placeholder="Description" required></textarea>
                    </label>
                </div>

                <div class="form-group">
                    <label>
                        Price:
                        <input type="number" name="price" placeholder="Price of product" min="0" required value="">
                    </label>
                </div>
                <div class="form-group">
                    <label>
                        Quantity:
                        <input type="number" name="stock_quantity" min="0" placeholder="Quantity in stock" required value="">
                    </label>
                </div>
                <div class="form-group">
                    <fieldset>
                        <legend>Category:</legend>
                        <select name="category">
                        <% for(let i = 0; i < categories.length; i++){ %>
                            <option value="<%= categories[i]._id%>"><%= categories[i].name%></option>
                            <!-- <input type="radio" name="category" id="<%= categories[i]._id%>" value="<%= categories[i].name%>"> -->
                            <!-- <label for="<%= categories[i]._id%>"><%= categories[i].name%></label>  -->
                            <!-- <p><%= categories[i].name%></p> -->
                        <%}%>
                    </select>
                </fieldset>
                </div>
                <button type="submit">Submit</button>
            </form>
        </section>
<%- include('footer.ejs') %>